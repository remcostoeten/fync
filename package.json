{
  "name": "gheasy",
  "version": "1.0.0",
  "description": "A flexible, chainable GitHub API client with built-in caching and TypeScript support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist dist-cjs && tsc -p tsconfig.build.json && tsc -p tsconfig.cjs.json && node -e \"const fs = require('fs'); fs.copyFileSync('dist-cjs/index.js', 'dist/index.cjs'); fs.rmSync('dist-cjs', {recursive: true})\"",
    "dev": "tsc --watch",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "test": "vitest",
    "test:run": "vitest run --no-coverage",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write"
    ]
  },
  "keywords": [
    "github",
    "api",
    "github-api",
    "chainable",
    "fluent",
    "typescript",
    "cache",
    "pagination",
    "gist",
    "repository",
    "commits",
    "branches"
  ],
  "author": "remcostoeten (github.com/remcostoeten)",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remcostoeten/github-easy-fetcher.git"
  },
  "homepage": "https://github.com/remcostoeten/github-easy-fetcher#readme",
  "bugs": {
    "url": "https://github.com/remcostoeten/github-easy-fetcher/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "fastify": "^5.4.0",
    "github-easy-fetcher": "file:"
  }
}
