{
  "name": "fync",
  "version": "1.0.0",
  "description": "A unified platform for fetching data from popular APIs (GitHub, GitLab, etc.)",
  "private": true,
  "packageManager": "pnpm@8.0.0",
  "workspaces": [
    "core",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "check": "turbo run check",
    "check:fix": "turbo run check:fix",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "test:coverage": "turbo run test:coverage",
    "prepare": "husky install",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "changeset publish"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write"
    ]
  },
  "keywords": [
    "github",
    "api",
    "github-api",
    "chainable",
    "fluent",
    "typescript",
    "cache",
    "pagination",
    "gist",
    "repository",
    "commits",
    "branches"
  ],
  "author": "remcostoeten (github.com/remcostoeten)",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remcostoeten/fync.git"
  },
  "homepage": "https://github.com/remcostoeten/fync#readme",
  "bugs": {
    "url": "https://github.com/remcostoeten/fync/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
