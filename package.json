{
  "name": "github-easy-fetcher",
  "version": "1.0.0",
  "description": "A flexible, chainable GitHub API client with built-in caching and TypeScript support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "test": "vitest",
    "test:run": "vitest run --no-coverage",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write"
    ]
  },
  "keywords": [
    "github",
    "api",
    "github-api",
    "chainable",
    "fluent",
    "typescript",
    "cache",
    "pagination",
    "gist",
    "repository",
    "commits",
    "branches"
  ],
  "author": "remcostoeten (github.com/remcostoeten)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/remcostoeten/github-easy-fetcher.git"
  },
  "homepage": "https://github.com/remcostoeten/github-easy-fetcher#readme",
  "bugs": {
    "url": "https://github.com/remcostoeten/github-easy-fetcher/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
