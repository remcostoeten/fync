{
  "name": "@remcostoeten/deify",
  "version": "2.0.0",
  "description": "Main deify package - GitHub API client with chainable, fluent interface (formerly gheasy)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./github": {
      "import": "./dist/github-entry.js",
      "require": "./dist/github-entry.js",
      "types": "./dist/github-entry.d.ts"
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "github",
    "api",
    "github-api",
    "chainable",
    "fluent",
    "typescript",
    "cache",
    "pagination",
    "gist",
    "repository",
    "commits",
    "branches",
    "gheasy"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/remcostoeten/deify.git",
    "directory": "packages/deify"
  },
  "homepage": "https://github.com/remcostoeten/deify#readme",
  "bugs": {
    "url": "https://github.com/remcostoeten/deify/issues"
  },
  "dependencies": {
    "@deify/core": "*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}

